		"dev:api": "npm run dev -w @vibes/api",
		"dev:web": "npm run dev -w @vibes/web",

		"start:web": "npm run start -w @vibes/web",
		"start:api": "npm run start -w @vibes/api",

		"lint": "npm run lint --ws",
